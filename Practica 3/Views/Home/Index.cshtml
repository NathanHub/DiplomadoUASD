@model IEnumerable<Explorando_ASP.NET_MVC_5_Prac3.Models.Coche>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Listado de Vehiculos</h2>
    <div> 
        @{ var grid = new WebGrid(Model, defaultSort: "Marca");}

        @grid.GetHtml(columns:grid.Columns(
                grid.Column("Tipo", header:"Tipo"),
                grid.Column("Marca", header:"Marca"),
                grid.Column("Modelo", header:"Modelo"),
                grid.Column("Color", header:"Color")
        ))
    </div>
</body>
</html>
